// cube_translation.cpp
// Draws two wireframe cubes: original (left) and translated (right) to show 3D translation.
#include <GL/glut.h>

void initGL() {
    glClearColor(1.0f, 1.0f, 1.0f, 1.0f);
    glEnable(GL_DEPTH_TEST);
    glMatrixMode(GL_PROJECTION);
    glLoadIdentity();
    gluPerspective(45.0, 900.0/300.0, 1.0, 100.0);
}

void drawScene() {
    glClear(GL_COLOR_BUFFER_BIT | GL_DEPTH_BUFFER_BIT);
    glMatrixMode(GL_MODELVIEW);
    glLoadIdentity();

    // place camera so we see both cubes clearly
    gluLookAt(4.0, 3.0, 8.0,   // eye
              1.0, 1.0, 0.0,   // center (look near the cubes)
              0.0, 1.0, 0.0);  // up

    glLineWidth(2.0f);
    glColor3f(0.0f, 0.0f, 0.0f);

    // ORIGINAL CUBE (left)
    glPushMatrix();
        // move the original a bit left and down so it matches the sketch
        glTranslatef(-1.2f, -0.2f, 0.0f);
        // rotate slightly so we can see depth like the sketch
        glRotatef(-12.0f, 0.0f, 1.0f, 0.0f);
        glutWireCube(2.0f); // size 2 -> spans roughly from -1..+1 in local coords
    glPopMatrix();

    // TRANSLATED CUBE (right) - show translation along +X and slightly forward (+Z)
    glPushMatrix();
        // apply translation relative to original
        glTranslatef(1.8f, -0.2f, 0.8f); // adjust these to match how far right/forward you want
        glRotatef(-12.0f, 0.0f, 1.0f, 0.0f); // same rotation for consistent view
        glutWireCube(2.0f);
    glPopMatrix();

    glutSwapBuffers();
}

int main(int argc, char** argv) {
    glutInit(&argc, argv);
    glutInitDisplayMode(GLUT_DOUBLE | GLUT_RGB | GLUT_DEPTH);
    glutInitWindowSize(900, 300);
    glutCreateWindow("3D Translation - Original and Translated Cube");

    initGL();
    glutDisplayFunc(drawScene);
    glutMainLoop();
    return 0;
}
